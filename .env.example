# .env.example — Copy this file to .env and fill in the values before running the project.

# PostgreSQL
POSTGRES_DB=davivienda_db
POSTGRES_USER=davivienda_user
POSTGRES_PASSWORD=davivienda_password

# Prisma connection URL
DATABASE_URL=postgresql://davivienda_user:davivienda_password@localhost:5432/davivienda_db

# Redis
REDIS_PASSWORD=davivienda_redis_password
REDIS_URL=redis://:davivienda_redis_password@localhost:6379

# JWT secrets — generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=replace_with_64_byte_random_hex_string
JWT_REFRESH_SECRET=replace_with_another_64_byte_random_hex_string
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Session secret used by Astro SSR for cookie signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=replace_with_32_byte_random_hex_string

# Internal URL used by the Astro SSR server to reach the backend (Docker internal network)
BACKEND_URL=http://localhost:4000

# Public URL used by React islands running in the browser
PUBLIC_BACKEND_URL=http://localhost:4000

NODE_ENV=development
