---
import AdminLayout from '@layouts/AdminLayout.astro';
import type { Product, PaginatedProducts } from '@/types';

const BACKEND_URL = import.meta.env.BACKEND_URL ?? 'http://localhost:4000';
const token = Astro.cookies.get('access_token')?.value;

const url = new URL(Astro.request.url);
const page = url.searchParams.get('page') ?? '1';

let products: PaginatedProducts = { data: [], total: 0, page: 1, limit: 20, totalPages: 0 };

try {
  const res = await fetch(`${BACKEND_URL}/api/products?page=${page}&limit=20`, {
    headers: token ? { Authorization: `Bearer ${token}` } : {},
  });
  if (res.ok) {
    const json = await res.json();
    products = json.data;
  }
} catch {
  // Backend unreachable
}
---

<AdminLayout title="Manage Products">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold">Products</h1>
      <a
        href="/admin/products/new"
        class="rounded-lg bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:opacity-90 transition-opacity"
      >
        + New Product
      </a>
    </div>

    <div class="overflow-x-auto rounded-xl border border-divider">
      <table class="w-full text-sm">
        <thead class="border-b border-divider bg-default-50">
          <tr>
            <th class="px-4 py-3 text-left font-medium text-default-500">Product</th>
            <th class="px-4 py-3 text-left font-medium text-default-500">Category</th>
            <th class="px-4 py-3 text-right font-medium text-default-500">Price</th>
            <th class="px-4 py-3 text-right font-medium text-default-500">Stock</th>
            <th class="px-4 py-3 text-center font-medium text-default-500">Status</th>
            <th class="px-4 py-3 text-right font-medium text-default-500">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-divider">
          {products.data.map((product: Product) => (
            <tr class="hover:bg-default-50 transition-colors">
              <td class="px-4 py-3">
                <div class="flex items-center gap-3">
                  <img
                    src={product.imageUrl || 'https://via.placeholder.com/40'}
                    alt={product.name}
                    class="h-10 w-10 rounded-lg object-cover"
                  />
                  <div>
                    <p class="font-medium">{product.name}</p>
                    <p class="text-xs text-default-400 font-mono">{product.id.slice(0, 8)}</p>
                  </div>
                </div>
              </td>
              <td class="px-4 py-3 text-default-500">
                {product.category?.name ?? '-'}
              </td>
              <td class="px-4 py-3 text-right font-medium">
                ${parseFloat(product.price).toFixed(2)}
              </td>
              <td class="px-4 py-3 text-right">
                <span class={product.stock <= 5 ? 'text-warning font-medium' : ''}>
                  {product.stock}
                </span>
              </td>
              <td class="px-4 py-3 text-center">
                <span class={`rounded-full px-2 py-0.5 text-xs font-medium ${
                  product.isActive ? 'bg-success-100 text-success-700' : 'bg-danger-100 text-danger-700'
                }`}>
                  {product.isActive ? 'Active' : 'Inactive'}
                </span>
              </td>
              <td class="px-4 py-3 text-right">
                <a
                  href={`/admin/products/${product.id}`}
                  class="text-sm text-primary hover:underline"
                >
                  Edit
                </a>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    {products.totalPages > 1 && (
      <nav class="flex justify-center gap-2">
        {products.page > 1 && (
          <a href={`/admin/products?page=${products.page - 1}`}
             class="rounded-lg border border-divider px-3 py-1.5 text-sm hover:bg-default-100">
            Previous
          </a>
        )}
        <span class="px-3 py-1.5 text-sm text-default-500">
          Page {products.page} of {products.totalPages}
        </span>
        {products.page < products.totalPages && (
          <a href={`/admin/products?page=${products.page + 1}`}
             class="rounded-lg border border-divider px-3 py-1.5 text-sm hover:bg-default-100">
            Next
          </a>
        )}
      </nav>
    )}
  </div>
</AdminLayout>
